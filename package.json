{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "./API/lib/server.js",
  "dependencies": {
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "body-parser": "^1.18.3",
    "eslint-plugin-import": "^2.16.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/register": "^7.0.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.3.0",
    "supertest": "^3.4.2"
  },
  "scripts": {
    "start": "node ./API/lib/server.js",
    "lint": "eslint ./API/source --fix",
    "test-watch": "nodemon --exec  \"npm test\"",
    "test": "set NODE_ENV=test nyc ./node_modules/.bin/mocha ./API/lib/tests/*.test.js --timeout 10000 --exit",
    "build": "./node_modules/.bin/babel ./API/source -d ./API/lib",
    "test-dev": "npm test && nyc report --reporter=text-lcov | coveralls",
    "coverage": "npm test && NODE_ENV=test nyc report --reporter=text-lcov | coveralls && nyc report --reporter=lcov",
    "report-coverage": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov "
  },
